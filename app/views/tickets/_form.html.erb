<%= simple_form_for @ticket do |f| %>
  <%= f.input :customer_name %>
  <%= f.input :customer_email %>
  <%= f.input :department %>
  <%= f.input :subject %>
  <% if not current_user.nil?%>
  <%= f.input :status, collection:Ticket.status, include_blank: false %>
  <%= f.association :user, collection: [User.find(current_user.id)], label_method: :email, as: :check_boxes, label: "Assign yourself?"    %>
  <% end %>
  <%= f.input :description %>
  <% if not current_user.nil?%>
  <%= f.input :response %>
  <% end %>
  <%= f.button :submit %>
<% end %>
